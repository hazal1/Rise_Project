@{
    ViewData["Title"] = "GetSinglePersonByIdContact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model PersonWithContactDto

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <a class="btn btn-success col fileinput-button" asp-controller="PersonContact" asp-action="Save">
                            <i class="fas fa-plus"></i>
                            <span>Yeni İletişim Bilgisi Ekle</span>
                        </a>
                    </div>
                </div>
                <div class="callout callout-info">
                    <h5><i class="fas fa-info"></i> Bilgi:</h5>
                    @Model.Name @Model.Surname Kişisine ait iletişim Listesi
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Konum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PersonContacts)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@ViewBag.Cities[item.CityId].Name</td>
                                <td>
                                    <a class="btn btn-danger" asp-controller="PersonContact" asp-action="Remove" asp-route-id="@item.Id"><i class="fa fa-trash-alt"></i>Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
